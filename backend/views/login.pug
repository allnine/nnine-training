doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login Page
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f4f4f4;
      }
      .login-container {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
      }
      .login-container h1 {
        margin-bottom: 20px;
        font-size: 24px;
        text-align: center;
      }
      .form-group {
        margin-bottom: 15px;
      }
      .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
      }
      .form-group input {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
      .login-button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        margin-top: 10px;
      }
      .login-button:hover {
        background-color: #0056b3;
      }
      .extra-links {
        text-align: center;
        margin-top: 15px;
      }
      .extra-links a {
        color: #007bff;
        text-decoration: none;
        font-size: 14px;
      }
      .extra-links a:hover {
        text-decoration: underline;
      }
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(type="module" src="./js/login.js")
  body
    .login-container
      h1 Login
      form.form
        .form-group
          label(for="email") Email
          input(type="text", id="email", name="email", required)
        .form-group
          label(for="password") Password
          input(type="password", id="password", name="password", required)
        button.login-button(type="submit") Login
      .extra-links
        a(href="/forgot-password") Forgot Password?
        br
        a(href="/register") Create an Account
        a(href="/api/v1/course") Get All Course
